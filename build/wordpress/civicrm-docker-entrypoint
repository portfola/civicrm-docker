#!/bin/sh

set -e

# Ensure /var/www/private directory exists with correct permissions
if [ ! -d /var/www/private ]; then
  mkdir -p /var/www/private
fi
chown www-data:www-data /var/www/private

# TODO: run the installer if we are not installed and CIVICRM_AUTO_INSTALL=1
# TODO: run the upgrade if required and CIVICRM_AUTO_UPDATE=1

exec docker-php-entrypoint "$@"

